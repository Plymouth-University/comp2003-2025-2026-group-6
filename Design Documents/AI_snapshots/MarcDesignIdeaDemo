  <title>Name Pending — Classroom Minigame Demo</title>
  <style>
    :root{--bg:#0f1724;--card:#0b1220;--accent:#7dd3fc;--muted:#94a3b8;--win:#86efac}
    *{box-sizing:border-box;font-family:Inter,ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,"Helvetica Neue",Arial}
    html,body{height:100%;margin:0;background:linear-gradient(180deg,#071021 0%,#07141b 60%);color:#e6f0ff}
    .app{max-width:1100px;margin:24px auto;padding:18px}
    header{display:flex;gap:12px;align-items:center}
    h1{margin:0;font-size:20px}
    .subtitle{color:var(--muted);font-size:13px}

    .layout{display:grid;grid-template-columns:360px 1fr;gap:18px;margin-top:18px}
    .panel{background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));border-radius:12px;padding:14px;box-shadow:0 6px 18px rgba(2,6,23,0.6)}

    /* Left column */
    .controls .row{margin-bottom:12px}
    label{display:block;font-size:12px;color:var(--muted);margin-bottom:6px}
    input[type=text],select,textarea{width:100%;padding:8px;border-radius:8px;border:1px solid rgba(255,255,255,0.04);background:transparent;color:inherit}
    button{background:var(--accent);border:none;padding:8px 10px;border-radius:8px;cursor:pointer;color:#04202b;font-weight:600}
    button.ghost{background:transparent;border:1px solid rgba(255,255,255,0.05);color:var(--muted)}

    .players{display:flex;flex-direction:column;gap:8px}
    .player{display:flex;align-items:center;gap:8px;padding:8px;border-radius:8px;background:rgba(255,255,255,0.02)}
    .player .color{width:18px;height:18px;border-radius:6px}
    .player input{background:transparent;border:none;color:inherit}

    /* Right column */
    .stage{min-height:420px;padding:16px;display:flex;flex-direction:column;gap:12px}
    .stage-top{display:flex;justify-content:space-between;align-items:center}
    .timer{font-weight:700;font-size:22px}
    .round{color:var(--muted)}

    .game-area{flex:1;background:linear-gradient(180deg, rgba(255,255,255,0.01), rgba(255,255,255,0.02));border-radius:10px;padding:12px;position:relative;overflow:hidden}

    /* Minigame styles */
    .flame{position:absolute;width:36px;height:48px;background:radial-gradient(circle at 30% 30%, #ffd166, #fb5607 40%, #cb1b00 100%);border-radius:50%;transform-origin:center;box-shadow:0 6px 12px rgba(203,27,0,0.4)}
    .water-btn{position:absolute;right:12px;bottom:12px}

    .avoider{display:flex;flex-direction:column;height:100%}
    .arena{flex:1;position:relative;background:linear-gradient(180deg,#071827,#04141a);border-radius:8px;overflow:hidden}
    .player-avatar{position:absolute;bottom:14px;width:34px;height:34px;border-radius:6px;background:var(--accent);display:flex;align-items:center;justify-content:center;color:#04202b;font-weight:700}
    .hazard{position:absolute;width:28px;height:28px;border-radius:6px;background:#ff7ab6}

    /* Quiz */
    .question{font-weight:700}
    .answers{display:grid;grid-template-columns:1fr 1fr;gap:8px;margin-top:10px}
    .answer{padding:10px;border-radius:8px;background:rgba(255,255,255,0.02);cursor:pointer}

    /* Leaderboard */
    .leader{display:flex;gap:12px;align-items:center;padding:8px;border-radius:8px;background:rgba(255,255,255,0.02);margin-bottom:8px}
    .leader .rank{font-weight:800;width:28px}
    .leader .meta{flex:1}
    .score{font-weight:800}

    footer{margin-top:12px;color:var(--muted);font-size:13px}

    /* small screens */
    @media(max-width:880px){.layout{grid-template-columns:1fr}.stage{min-height:360px}}
